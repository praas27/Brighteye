<Window x:Class="Brighteye.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Brighteye"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnFillTable1" Content="Fill Table 1" HorizontalAlignment="Left" Margin="50,30,0,0" VerticalAlignment="Top" Click="btnFillTable1_Click"/>
        <Button x:Name="btnSortTable2" Content="Sort and Fill Table 2" HorizontalAlignment="Left" Margin="50,60,0,0" VerticalAlignment="Top" Click="btnSortTable2_Click"/>
        <DataGrid x:Name="dgTable2" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="514,0,0,0"/>
    </Grid>
</Window>
